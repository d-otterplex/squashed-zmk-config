/dts-v1/;
#include <atmel/samd21.dtsi>
#include <atmel/samx2xx18.dtsi>
#include "d12-pinctrl.dtsi"
#include <dt-bindings/zmk/matrix_transform.h>

/ {
	model = "d12";
	compatible = "otterplex,d12";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &code_partition;
		zmk,kscan = &kscan;//&kscan_matrix;
		zmk,matrix-transform = &default_transform;
		zmk,split-uart = &sercom0;
        zephyr,boot-mode = &boot_retention;
		zmk,magic-boot-mode = &magic_retention;
	};

        sram@20007FFC {
                compatible = "zephyr,memory-region", "mmio-sram";
                reg = <0x20007FFC 0x4>;
                zephyr,memory-region = "RetainedMem";
                status = "okay";

                retainedmem {
                        compatible = "zephyr,retained-ram";
                        status = "okay";
                        #address-cells = <1>;
                        #size-cells = <1>;

                        magic_retention: retention@0 {
                                compatible = "zephyr,retention";
                                status = "okay";
                                reg = <0x0 0x4>;
                        };
                };
        };

        magic_mapper {
                compatible = "zmk,bootmode-to-magic-mapper";
                status = "okay";

                #address-cells = <1>;
                #size-cells = <1>;

                boot_retention: retention@0 {
                        compatible = "zephyr,retention";
                        status = "okay";
                        reg = <0x0 0x1>;
                };
        };

	kscan: kscan {
		compatible = "zmk,kscan-gpio-direct";
		input-gpios
			= <&porta 14 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&porta 15 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&porta 27 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&porta 28 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&porta  7 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&porta  5 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&porta 16 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&porta 17 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&porta  3 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&porta  2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&porta  1 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			, <&porta  0 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
			;
	};

	default_transform: default_transform {
		compatible = "zmk,matrix-transform";
		columns = <12>;
		rows = <2>;
        map = <
		RC(0,0) RC(0,1) RC(0,2)  RC(0,3)  RC(1,0) RC(1,1) RC(1,2)  RC(1,3)
        RC(0,4) RC(0,5) RC(0,6)  RC(0,7)  RC(1,4) RC(1,5) RC(1,6)  RC(1,7)
        RC(0,8) RC(0,9) RC(0,10) RC(0,11) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
		>;
	};

};

&cpu0 {
	clock-frequency = <48000000>;
};

zephyr_udc0: &usb0 {
	status = "okay";

	pinctrl-0 = <&usb_dc_default>;
	pinctrl-names = "default";
};

&sercom0 {
	status = "okay";
	compatible = "atmel,sam0-uart";

	pinctrl-0 = <&sercom0_uart_default>;
	pinctrl-names = "default";

	current-speed = <115200>;
	rxpo = <0>;
	txpo = <1>;
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			reg = <0x00000000 DT_SIZE_K(8)>;
			read-only;
		};

		code_partition: partition@2000 {
			reg = <0x2000 DT_SIZE_K(256-8-16)>;
			read-only;
		};

		/*
		 * The final 16 KiB is reserved for the application.
		 * Storage partition may be used by FCB or LittleFS.
		 */
		storage_partition: partition@3c000 {
			reg = <0x0003c000 DT_SIZE_K(16)>;
		};
	};
};

&sram0 {
        reg = <0x20000000 0x7FFC>;
};
